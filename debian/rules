#!/usr/bin/make -f
#export DH_VERBOSE = 1

export PYBUILD_NAME=geth-exporter

%:
	dh $@  --with python3 --buildsystem=pybuild --with systemd

override_dh_clean:
	dh_clean
	rm -f MANIFEST geth-exporter-*orig.tar.gz
	rm -rf dist/
	rm -rf build/

make-orig-tar:
	python3 setup.py sdist
	mv dist/geth-exporter-*.tar.gz geth-exporter-{{VERSION}}.orig.tar.gz
